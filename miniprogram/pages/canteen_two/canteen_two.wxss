/*总体主盒子*/  
.con {  
  position: relative;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #939393;  
}
 /*左侧栏主盒子*/  
.nav_left{  
  /*设置行内块级元素（没使用定位）*/  
  display: inline-block;  
  width: 25%;  
  height: 100%;  
  /*主盒子设置背景色为灰色*/  
  background: #f5f5f5;  
  text-align: center;  
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{
    /* 文字居中 */
    display: flex;
    align-items: center;
    justify-content: center;   
  /*每个高30px*/ /*尝试调成130rpx*/ 
  height: 130rpx;   
  /*再设上下padding增加高度，总高42px*/  
  padding: 5rpx 0;  
  /*只设下边线*/  
  border-bottom: 2rpx solid #dedede;  
  /*文字14px*/  
  font-size: 30rpx; 
}  
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_itemsactive{  
  /*背景色变成白色*/  
  background: #fff;  
  color: #FE8848; 
   /*每个高30px*/  
   height: 130rpx;  
   /*垂直居中*/  
   line-height: 80rpx;  
   /*再设上下padding增加高度，总高42px*/  
   padding: 5rpx 0;  
   /*只设下边线*/  
   border-bottom: 2rpx solid #dedede;  
   /*文字14px*/  
   font-size: 30rpx; 
}  
/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  
  position: absolute;  
  top: 0;  
  right: 0;  
  flex: 1;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  width: 75%;  
  height: 2000rpx;  
  padding: 20rpx;  
  box-sizing: border-box;  
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
display: flex;
flex-direction: row;
height: 200rpx;
width: 100%;

}  
.nav_right .nav_right_items .image{  
 height: 180rpx;
 width: 180rpx;
 border-radius: 10%;

}  
.nav_right .nav_right_items .text{  
display: flex;
flex-direction: column;
justify-content: space-between; 
padding: 10rpx;

} 
.nav_right .nav_right_items .text .head
{
  font:bold 42rpx "宋体";
  color:#2e2e2e;
}
.nav_right .nav_right_items .text .price
{
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color:#2e2e2e;
}
/* 隐藏scroll-view的滚动条 */
::-webkit-scrollbar {
 
  width:0;
   
  height:0;
   
  color:transparent;
   
  }